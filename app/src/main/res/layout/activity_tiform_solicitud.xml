<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TI.TIFormSolicitudActivity">

    <LinearLayout
        android:id="@+id/llTIFormSolicitudTitle"
        style="@style/LayoutTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibTIFormSolicitudBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?actionBarItemBackground"
            android:clickable="true"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:src="@drawable/button_back"/>

        <TextView
            style="@style/GreenSemiBoldSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:text="Detalle de solicitud" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTIFormSolicitudTitle"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/ivTIFormSolicitudImageTI"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/role_student" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTIFormSolicitudNombreCliente"
                        style="@style/WhiteSemiBoldSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="4dp"
                        android:text="Oliver Bustamente" />

                    <TextView
                        android:id="@+id/tvTIFormSolicitudFechaReservaCliente"
                        style="@style/WhiteMedium16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="14 Oct 2022" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTIFormSolicitudFechaResponse"
                style="@style/WhiteMedium14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="Enviada hoy" />

            <TextView
                android:id="@+id/tvTIFormSolicitudEstado"
                style="@style/WhiteMedium14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:text="Enviada hoy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivTIFormSolicituCardImageEquipo"
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/role_student"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTIFormSolicituCardMarca"
                        style="@style/WhiteMedium16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="MSI"/>
                    <TextView
                        android:id="@+id/tvTIFormSolicituCardModelo"
                        style="@style/WhiteSemiBoldSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textAllCaps="true"
                        android:text="Katana GF76"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivTIFormSolicituDispCategoria"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_laptop_green" />

                        <TextView
                            android:id="@+id/tvTIFormSolicituDispCategoria"
                            style="@style/GreenMedium16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Laptop" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvTIFormSolicituMotivoTIttle"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Motivo" />

            <TextView
                android:id="@+id/tvTIFormSolicituMotivo"
                style="@style/InputGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvTIFormSolicituCursoTittle"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Curso" />

            <TextView
                android:id="@+id/tvTIFormSolicituCurso"
                style="@style/InputGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvTIFormSolicituTiempoTittle"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tiempo de reserva" />

            <TextView
                android:id="@+id/tvTIFormSolicituTiempo"
                style="@style/InputGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvTIFormSolicituProgramasTittle"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Programas" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgTIFormSolicituProgramas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvTIFormSolicituProgramasTittle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp">
            </com.google.android.material.chip.ChipGroup>


            <TextView
                android:id="@+id/tvTIFormSolicituDNItittle"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="DNI" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tvTIFormSolicituDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.9"
                android:focusable="true"
                tools:itemCount="0"
                tools:listitem="@layout/item_dni_upload" />

            <androidx.cardview.widget.CardView
                android:id="@+id/glTIFormSolicituDNI"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/unfocused"
                android:columnCount="2"
                android:orientation="horizontal"
                android:useDefaultMargins="true"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivTIFormSolicituDNI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/ic_photo" />
            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/pbTIFormSolicituDNIPhoto"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:max="100"
                android:progress="0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTIFormSolicituOtrosTittle"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Otros" />

            <EditText
                android:id="@+id/etTIFormSolicituOtros"
                style="@style/InputGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btnTIFormSolicituAceptarSoli"
                    style="@style/BtnPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="aceptarSolicitud"
                    android:text="Aceptar" />

                <Button
                    android:id="@+id/btnTIFormSolicituRechazarSoli"
                    style="@style/BtnSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="rechazarSolicitud"
                    android:text="Rechazar" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pbTIFormSolicituLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>