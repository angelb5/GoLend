<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#00FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="@color/grey3_25"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/ivUserClientePImage"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:src="@drawable/role_student"
            android:scaleType="fitCenter"
            android:layout_marginEnd="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUserClienteRol"
                style="@style/GreySemibold12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textAllCaps="true"
                android:text="Estudiante"/>
            <TextView
                android:id="@+id/tvUserClienteNombre"
                style="@style/WhiteSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:lines="2"
                android:text="Oliver Bustamente"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>