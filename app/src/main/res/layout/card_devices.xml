<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    style="@style/Widget.Material3.CardView.Elevated"
    app:cardElevation="4dp"
    android:backgroundTint="@color/blue_light"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/unfocused"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:src="@drawable/image_device_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:backgroundTint="@color/blue_dark"
                app:cardCornerRadius="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:tint="@color/white"
                        android:src="@drawable/ic_laptop_green"
                        android:layout_width="12dp"
                        android:layout_marginEnd="2dp"
                        android:layout_height="12dp"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CategorÃ­a"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">
            <TextView
                style="@style/GreyMedium16"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca"/>
            <TextView
                style="@style/WhiteSemibold16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo"/>
            <Button
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_gravity="center"
                android:textColor="@color/green_main"
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/textButton"
                android:drawableEnd="@drawable/ic_arrow_right_16"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Detalles" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>