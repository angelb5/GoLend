<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    style="@style/Widget.Material3.CardView.Elevated"
    app:cardElevation="4dp"
    android:backgroundTint="@color/blue_light"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="@color/grey3_25"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/ivEquipoPopularDeviceFoto"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:src="@drawable/role_student"
            android:scaleType="fitCenter"
            android:layout_marginEnd="24dp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCardEquiposPopularesMarca"
                style="@style/GreenSemiBoldSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Marca"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEquiposPopularesMarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Lenovo"
                    android:textColor="@color/green_main"
                    android:layout_marginEnd="7dp"
                    android:textSize="15sp" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivCardEquiposPopularesCategoria"
                        app:tint="@color/green_main"
                        android:src="@drawable/ic_laptop_green"
                        android:layout_width="14dp"
                        android:layout_marginEnd="4dp"
                        android:layout_height="14dp"/>
                    <TextView
                        android:id="@+id/tvCardEquiposPopularesCategoria"
                        android:textSize="15sp"
                        android:textColor="@color/green_main"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laptop"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCardEquiposPopularesCantDisp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="15"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/tvCardEquiposPopularesPrestamosTxt"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="prÃ©stamos"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>