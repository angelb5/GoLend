<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/grey3_25"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp">

        <LinearLayout
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/GreySemibold12"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginBottom="4dp"
                android:textAllCaps="true"
                android:background="@color/grey_slide_unselected"/>

            <View
                style="@style/WhiteBold14"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:background="@color/unfocused"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                style="@style/GreyRegular12"
                android:background="@color/grey_slide_unselected"/>

        </LinearLayout>

        <Button
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:drawableEnd="@drawable/ic_arrow_direction_right"
            android:drawableTint="@color/grey_slide_unselected"
            android:fontFamily="@font/montserrat_medium"
            android:text="Detalles"
            android:textColor="@color/unfocused"
            android:textSize="12dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>