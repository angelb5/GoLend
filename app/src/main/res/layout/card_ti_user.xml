<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#00FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="@color/grey3_25"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/ivUserTiPImage"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:src="@drawable/role_student"
            android:scaleType="fitCenter"
            android:layout_marginEnd="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUserTiCodigo"
                style="@style/GreySemibold12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textAllCaps="true"
                android:text="20190981"/>
            <TextView
                android:id="@+id/tvUserTiNombre"
                style="@style/GreenSemiBoldSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="16dp"
                android:lines="2"
                android:text="Oliver Bustamente"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <Button
                    android:id="@+id/btnUserTiActualizar"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textColor="@color/green_main"
                    android:padding="2dp"
                    android:layout_marginVertical="0dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:text="Actualizar"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>