        <item name="android:textColor">@color/unfocused</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Tamaño 12-->
    <style name="WhiteSemibold12">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="WhiteMedium12">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
