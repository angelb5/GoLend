<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoLend" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_main</item>
        <item name="colorSecondaryVariant">@color/green_main</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Golend.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <!-- Estilos de texto -->
    <!-- Títulos -->
    <style name="WhiteBoldTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="WhiteSemiBoldTitle">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="WhiteMediumTitle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="GreenBoldTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- Subtítulos Tamaño 20 -->
    <style name="WhiteSemiBoldSubtitle">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="WhiteMediumSubtitle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="GreenSemiBoldSubtitle">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Tamaño 16 -->
    <style name="WhiteBold16">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WhiteSemibold16">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WhiteMedium16">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WhiteRegular16">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="GreenMedium16">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="GreyMedium16">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/unfocused</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Tamaño 12-->
    <style name="WhiteMedium12">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="GreySemibold12">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/unfocused</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="UnselectedMedium12">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/grey_image_unselected</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Tamaño 10 -->
    <style name="UncheckedRegular10">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/unfocused</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="WhiteMedium10">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Estilos btn -->
    <style name="BtnPrimary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">48dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="BtnSecondary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">48dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <!-- Inputs!! -->
    <style name="InputGrey">
        <item name="android:drawablePadding">12dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorHint">@color/unfocused</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">16</item>
        <item name="android:background">@drawable/input_grey</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- BottomNav -->
    <style name="Golend.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#00FFFFFF</item>
    </style>
    <style name="BottomNav" >
        <item name="android:background">@color/blue_dark</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">12dp</item>
        <item name="itemIconSize">22dp</item>
        <item name="itemIconTint">@color/nav_icon_color</item>
        <item name="itemTextColor">@color/nav_icon_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceInactive">@style/UncheckedRegular10</item>
        <item name="itemTextAppearanceActive">@style/WhiteMedium10</item>
        <item name="itemActiveIndicatorStyle">@style/Golend.Custom.Indicator</item>
    </style>

    <!-- FAB -->
    <style name="FabPrimary" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/fab_primary_add</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="fabCustomSize">56dp</item>
        <item name="maxImageSize">56dp</item>
        <item name="shapeAppearanceOverlay">@style/fabRounded</item>
    </style>
    <style name="fabRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>
</resources>