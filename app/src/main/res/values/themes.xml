<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoLend" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Golend.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="android:windowBackground">@drawable/splashscreen_background</item>
        <!-- Eliminar este luego -->
        <item name="windowSplashScreenAnimationDuration">300</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.GoLend</item>
    </style>

    <!-- Estilos de texto -->
    <!-- Títulos -->
    <style name="WhiteBoldTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="WhiteSemiBoldTitle">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="GreenBoldTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- Subtítulos -->
    <style name="WhiteSemiBoldSubtitle">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Tamaño 16 -->
    <style name="WhiteBold16">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WhiteSemibold16">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WhiteMedium16">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WhiteRegular16">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="GreenMedium16">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilos btn -->
    <style name="BtnPrimary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">48dp</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="BtnSecondary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">48dp</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

</resources>