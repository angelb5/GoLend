    <!-- Tamaño 10 -->
    <style name="UncheckedRegular10">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/unfocused</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="WhiteMedium10">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Estilos btn -->
    <style name="BtnPrimary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textSize">16sp</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">48dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="BtnSecondary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textSize">16sp</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">48dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <!-- Inputs!! -->
    <style name="InputGrey">
        <item name="android:drawablePadding">12dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorHint">@color/unfocused</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">16</item>
        <item name="android:background">@drawable/input_grey</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SpinnerGrey">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">16</item>
        <item name="android:background">@drawable/selector_grey</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/font_light</item>
    </style>

    <!-- BottomNav -->
    <style name="Golend.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#00FFFFFF</item>
    </style>
    <style name="BottomNav" >
        <item name="android:background">@color/blue_dark</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">12dp</item>
        <item name="itemIconSize">22dp</item>
        <item name="itemIconTint">@color/nav_icon_color</item>
        <item name="itemTextColor">@color/nav_icon_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceInactive">@style/WhiteMedium10</item>
        <item name="itemTextAppearanceActive">@style/WhiteMedium10</item>
        <item name="itemActiveIndicatorStyle">@style/Golend.Custom.Indicator</item>
    </style>

    <!-- FAB -->
    <style name="FabPrimary" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/fab_primary_add</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="fabCustomSize">56dp</item>
        <item name="maxImageSize">56dp</item>
        <item name="shapeAppearanceOverlay">@style/fabRounded</item>
    </style>
    <style name="FabPrimaryUserAdd" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/fab_primary_user_add</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="fabCustomSize">56dp</item>
        <item name="maxImageSize">56dp</item>
        <item name="shapeAppearanceOverlay">@style/fabRounded</item>
    </style>
    <style name="fabRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

    <!-- Card -->
    <style name="BlueLightCard">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@color/blue_light</item>
    </style>

    <style name="LayoutTitle">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/blue_light</item>
    </style>


<!--Estilos de AlertDialog-->
    <style name="AlertDialogTheme.Center" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/blue_dark</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/TitlePaneStyleCenter</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyleCenter</item>
        <item name="materialAlertDialogTitleIconStyle">@style/TitleIconStyleCenter</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyleCenter</item>
        <item name="buttonBarStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>
    <style name="TitlePaneStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="TitleIconStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked">
        <item name="android:tint">@color/grey_image_unselected</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="TitleTextStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">@color/grey_image_unselected</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadlineSmall</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/green_main</item>
    </style>

    <style name="ButtonBarStyle">
        <item name="android:background">@color/blue_dark</item>
    </style>

    <!-- Chips (y Dale) -->
    <style name="chipTextUnselected" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="chipTextSelected" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
    <style name="chipUnselected">
        <item name="chipBackgroundColor">@color/blue_dark</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconEndPadding">2dp</item>
        <item name="chipIconSize">36dp</item>
        <item name="chipMinHeight">44dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/chipTextUnselected</item>
        <item name="chipStrokeColor">@color/grey_25</item>
        <item name="chipStrokeWidth">0.5dp</item>
    </style>
    <style name="chipSelected">
        <item name="chipBackgroundColor">@color/blue_dark</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconEndPadding">2dp</item>
        <item name="chipIconSize">36dp</item>
        <item name="chipMinHeight">44dp</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textAppearance">@style/chipTextSelected</item>
        <item name="chipStrokeColor">@color/green_main</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:colorBackground">@color/blue_light</item>
        <item name="colorButtonNormal">@color/blue_light</item>
        <item name="colorControlHighlight">@color/blue_light</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="colorBackgroundFloating">@color/blue_light</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="android:colorBackground">@color/blue_light</item>
        <item name="backgroundTint">@color/blue_light</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>